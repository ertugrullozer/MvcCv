@model MvcCv.Models.sınıfım.Class1
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css"
          rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


</head>
<body class="p-3">
    <h1 class="text-center display-4 p-2">Blog</h1>
    <div class="container text-center border shadow-lg d-flex justify-content-center rounded-4">
        <div class="row">
            <div class="col-lg-9">
                <div class="row">
                    <div class="row row-cols-1 row-cols-lg-3 m-2">
                        @foreach (var item in Model.tBLblogCard1s)
                        {


                        <div class="col">
                            <div class="card h-100">
                                <img src="@item.Card1Resim" class="card-img-top" alt="...">
                                <div class="card-body">

                                    <h5 class="card-title">@item.Card1Baslik</h5>
                                    @if (item.Card1Aciklama.Length>150)
                                    {
                                        <p class="card-text">@item.Card1Aciklama.Substring(0,150)...</p>
                                    }
                                    
                                </div>
                                <div class="gx-2">
                                <a class="btn btn-outline-primary mb-2  mt-0">Daha Fazla</a>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@item.Card1Tarih</small>
                                </div>
                            </div>
                        </div>
                        }
                  
                    </div>
                </div>
            </div>
            <div class="col-lg-3 mt-2">
                <div class="list-group">
                    @foreach (var item in Model.tBLblogCard2s)
                    {


                    <a href="#" class="list-group-item">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">@item.Baslik</div>
                           @item.Aciklama
                        </div>
                     
                    </a>
                    }
                </div>

            </div>
        </div>
    </div>
</body>
</html>
