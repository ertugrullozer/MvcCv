@using MvcCv.Models.Entity
@model List<TBLadmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin İşlemleri</h2>
<table class="table table-bordered mt-2">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Düzenle</th>
        <th>Kaldır</th>



    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KullaniciAdi</td>
            <td><a href="/Admin/Düzenle/@item.ID" class="btn btn-primary">Düzenle</a></td>
            <td><a href="/Admin/AdminSil/@item.ID" class="btn btn-danger">Sil</a></td>

        </tr>

    }
</table>
<a href="/Admin/AdminEkle" class="btn btn-primary">Yeni Kullanıcı Ekle</a>