@model MvcCv.Models.Entity.TBLsertifikalar
@{
    ViewBag.Title = "SertifikaGüncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Sertifika Güncelleme Sayfası</h4>

<form method="post">

    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })

    <br />
    @Html.Label("Sertifika Açıklaması")
    @Html.TextBoxFor(x => x.Sertifikalar, new { @class = "form-control" })
    <br />


    <br />
    <button class="btn btn-success">Kaydet</button>
    <a href="/Sertifika/SertifikaSil/@ViewBag.id" class="btn btn-danger">Sil</a>
  
</form>
